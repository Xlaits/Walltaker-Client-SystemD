[Unit]
Description=SystemD Daemon for JBerliner's Walltaker.sh or Walltaker-Client
#After=
#Before=

[Service]
ExecStart=/usr/bin/bash /home/xlaits/git/walltaker-client/walltaker.sh 1>/dev/null 2>/dev/null
